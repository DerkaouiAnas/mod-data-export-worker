{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Main entity for saving/retrieving log info",
  "LogRecord": {
    "type": "object",
    "properties": {
      "id": {
        "description": "Log record id",
        "type": "string",
        "format": "uuid"
      },
      "eventId": {
        "description": "Event id",
        "type": "string",
        "format": "uuid"
      },
      "userBarcode": {
        "description": "User barcode",
        "type": "string"
      },
      "items": {
        "description": "Notice items",
        "type": "array",
        "items": {
          "type": "object",
          "description": "Item related data",
          "properties": {
            "itemBarcode": {
              "description": "Item barcode",
              "type": "string"
            },
            "itemId": {
              "description": "Item id",
              "type": "string",
              "format": "uuid"
            },
            "instanceId": {
              "description": "Instance id",
              "type": "string",
              "format": "uuid"
            },
            "holdingId": {
              "description": "Holding id",
              "type": "string",
              "format": "uuid"
            },
            "loanId": {
              "description": "Loan id",
              "type": "string",
              "format": "uuid"
            }
          },
          "additionalProperties": false,
          "required": [
            "itemBarcode"
          ]
        }
      },
      "object": {
        "description": "The logged object type",
        "$ref": "logged_object_type.json#/LoggedObjectType"
      },
      "action": {
        "description": "Action type",
        "$ref": "action_type.json#/ActionType"
      },
      "date": {
        "description": "Event date",
        "type": "string",
        "format": "date-time"
      },
      "servicePointId": {
        "description": "Service point id",
        "type": "string",
        "format": "uuid"
      },
      "source": {
        "description": "Source",
        "type": "string"
      },
      "description": {
        "description": "Description",
        "type": "string"
      },
      "linkToIds": {
        "description": "Additional data for details",
        "type": "object",
        "properties": {
          "userId": {
            "description": "User id",
            "type": "string",
            "format": "uuid"
          },
          "requestId": {
            "description": "Request id",
            "type": "string",
            "format": "uuid"
          },
          "feeFineId": {
            "description": "Fee/Fine id",
            "type": "string",
            "format": "uuid"
          },
          "templateId": {
            "description": "Template id",
            "type": "string",
            "format": "uuid"
          },
          "noticePolicyId": {
            "description": "Notice Policy id",
            "type": "string",
            "format": "uuid"
          }
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "eventId"
    ]
  }
}
